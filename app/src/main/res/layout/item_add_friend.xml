<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toStartOf="@id/user_shortid"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_shortid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shortid"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_nickname"
        app:layout_constraintEnd_toStartOf="@id/agree_apply"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/agree_apply"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="同意"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toStartOf="@id/refuse_apply"
        app:layout_constraintStart_toEndOf="@id/user_shortid"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/refuse_apply"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="拒绝"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toStartOf="@id/del_apply"
        app:layout_constraintStart_toEndOf="@id/agree_apply"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/del_apply"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/refuse_apply"
        android:layout_marginLeft="5dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>