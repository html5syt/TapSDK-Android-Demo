<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popu_shape"
    android:padding="15dp">


    <EditText
        android:id="@+id/user_edit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="输入好友的Tap账户昵称"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/invite_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/user_edit"
        app:layout_constraintStart_toStartOf="@id/user_edit"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/user_edit"
        app:layout_constraintEnd_toEndOf="@id/user_edit"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>